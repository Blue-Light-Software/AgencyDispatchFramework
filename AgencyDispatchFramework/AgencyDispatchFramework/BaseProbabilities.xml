<?xml version="1.0" encoding="utf-8" ?>
<Probabilities>
  <Crime>
    <!-- 
      Defines the probabilities of the following crime levels.
      Every 4 hours in game, the Crime level has the opportunity
      to change to a different level.
    -->
    <CrimeLevels>
      <CrimeLevel key="None" value="6" />
      <CrimeLevel key="VeryLow" value="12" />
      <CrimeLevel key="Low" value="20" />
      <CrimeLevel key="Moderate" value="30" />
      <CrimeLevel key="High" value="20" />
      <CrimeLevel key="VeryHigh" value="12" />
    </CrimeLevels>

    <!-- 
      Defines the base probabilities of the following crime types.
      These probabilities, if defined in a locations xml file, will
      overwrite any values defined here.
    -->
    <Probabilities>
      <!--
        Disturbance crimes include:
          - Noise complaints
          - Disrupting the peace
          - Public intoxication
          - Suspicious activity
      -->
      <Disturbance>
        <Night clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <EarlyMorning clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <LateMorning clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <Afternoon clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <EarlyEvening clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <LateEvening clear="10" overcast="10" rain="10" snow="10" storm="10" />
      </Disturbance>

      <!--
        Property crimes include:
          - Burglary
          - Petty theft
          - Alarm triggered
          - Vandalism
      -->
      <Property>
        <Night clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <EarlyMorning clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <LateMorning clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <Afternoon clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <EarlyEvening clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <LateEvening clear="10" overcast="10" rain="10" snow="10" storm="10" />
      </Property>
      
      <!--
        Robbery crimes include:
          - Armed robbery
          - Grand theft auto at gun point
      -->
      <Robbery>
        <Night clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <EarlyMorning clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <LateMorning clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <Afternoon clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <EarlyEvening clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <LateEvening clear="10" overcast="10" rain="10" snow="10" storm="10" />
      </Robbery>
      
      <!-- 
        Traffic crimes include:
          - Hit and Runs 
          - Traffic Accidents 
          - Reckless driving 
          - Low jack or ALPR hits
          
          Does NOT include (These are calculated internally):
            - Speeding
            - Failure to Obey a Traffic Control Devices (stop signs, lights etc)
            - Driving Uninsured or Unlicensed
        -->
      <Traffic>
        <Night clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <EarlyMorning clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <LateMorning clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <Afternoon clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <EarlyEvening clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <LateEvening clear="10" overcast="10" rain="10" snow="10" storm="10" />
      </Traffic>
      
      <!--
        Violent crimes include:
          - Rape or attempted rape
          - Aggravated Assault
          - Domestic violence
          - Shootings
          - Kidnapping
          - Threats where a weapon is most likely present
      -->
      <Violent>
        <Night clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <EarlyMorning clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <LateMorning clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <Afternoon clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <EarlyEvening clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <LateEvening clear="10" overcast="10" rain="10" snow="10" storm="10" />
      </Violent>
      
      <!--
        Other or Misc crimes:
          - Routine / Proactive policing
          - Welfare Checks
          - Security Checks
          - Missing persons reports / investigations
          - Civil Stand bys
          - Anything else that doesnt fit into any other categories
      -->
      <Other>
        <Night clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <EarlyMorning clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <LateMorning clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <Afternoon clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <EarlyEvening clear="10" overcast="10" rain="10" snow="10" storm="10" />
        <LateEvening clear="10" overcast="10" rain="10" snow="10" storm="10" />
      </Other>
    </Probabilities>
  </Crime>
</Probabilities>